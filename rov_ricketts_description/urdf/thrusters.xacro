<?xml version="1.0" encoding="utf-8"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="thruster_macro" params="name *origin">
    <joint name="${name}_thruster" type="continuous">
      <xacro:insert_block name="origin"/>
      <parent link="base_link" />
      <child link="${name}" />
      <axis xyz="0 0 1" />
      <limit
        effort="20"
        velocity="10" />
    </joint>

    <link
      name="${name}">
      <inertial>
        <origin xyz="1.29123983e-04 -4.30643335e-05  6.65557479e-04" 
                rpy="0 0 0" />
        <mass value="2.8201033788020022" />
        <inertia
          ixx="1.36253391E-02"
          ixy="-3.62214961E-07"
          ixz="-6.16491988E-07"
          iyy="1.36232618E-02"
          iyz="-9.76544753E-06"
          izz="2.52722006E-02" />
      </inertial>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="file://$(find rov_ricketts_description)/meshes/propeller.stl" />
        </geometry>
        <material
          name="">
          <color
            rgba="0.5 0.5 0.5 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh
            filename="file://$(find rov_ricketts_description)/meshes/propeller.stl" />
        </geometry>
      </collision>
    </link>

  
  </xacro:macro>
</robot>